<a href="/">
  <span>KaLoN</span>
</a>
<% if user_signed_in? %>
  <div>
    <%= link_to user_path(current_user.id), class: 'nav-link' do %>
      <i class="fas fa-home"></i> ホーム
    <% end %>
  </div>
  <div>
    <%= link_to users_path, class: 'nav-link' do %>
      <i class="fas fa-users"></i> ユーザー一覧
    <% end %>
  </div>
  <div>
    <%= link_to posts_path, class: 'nav-link' do %>
      <i class="fas fa-book-open"></i> 投稿一覧
    <% end %>
  </div>
  <div>
    <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
      <i class="fas fa-sign-out-alt"></i> ログアウト
    <% end %>
  </div>
  <div>
    <%= render 'user/tagsearches/tagsearch' %>
  </div>
  <div>
    <%= render "user/searches/form" %>
  </div>
<% else %>
  <div>
    <%= link_to root_path, class: 'nav-link' do %>
      <i class="fas fa-home"></i> ホーム
    <% end %>
  </div>
  <div>
    <%= link_to about_path, class: 'nav-link' do %>
      <i class="fas fa-link"> アバウト</i> 
    <% end %>
  </div>
  <div>
    <%= link_to new_user_registration_path, class: 'nav-link' do %>
      <i class="fas fa-user-plus"></i> Sign up
    <% end %>
  </div>
  <div>
    <%= link_to new_user_session_path, class: 'nav-link' do %>
      <i class="fas fa-sign-in-alt"></i> Log in
    <% end %>
  </div>
<% end %>