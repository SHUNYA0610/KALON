    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
    <%= link_to posts_path, class: 'nav-link sidebar-link' do %>
      <i class="fa-solid fa-pen-fancy"></i>　投稿一覧
    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
