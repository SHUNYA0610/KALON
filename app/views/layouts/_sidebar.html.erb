    <% end %>
  </div>
  <div style="margin:20px 0 0 10px;"><!-- Button trigger modal -->
    <button type="button"  data-toggle="modal" data-target="#exampleModal" style="padding: 10px; border-radius: 25px; color: #D43EFF; background-color: white; border: 1px white solid; width: 90%; font-weight: bold;" >ポストする</button>
  </div>

<% elsif admin_signed_in? %>
  <div class="mt-2 mb-2 h5">
    <%= link_to admin_root_path, class: 'nav-link sidebar-link' do %>
      <i class="fas fa-home"></i>　ホーム
    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
    <%= link_to admin_users_path, class: 'nav-link sidebar-link' do %>
      <i class="fas fa-users"></i>　ユーザー一覧
    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
    <%= link_to admin_posts_path, class: 'nav-link sidebar-link' do %>
      <i class="fa-solid fa-pen-fancy"></i>　投稿一覧
    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
    <%= link_to admin_groups_path, class: 'nav-link sidebar-link' do %>
      <i class="fa-solid fa-people-roof"></i>　グループ一覧
    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
    <%= link_to new_admin_banner_path, class: 'nav-link sidebar-link' do %>
      <i class="fa-solid fa-tower-cell"></i>　バナー作成
    <% end %>
  </div>
  <div class="mt-2 mb-2 h5">
    <%= link_to admin_banners_path, class: 'nav-link sidebar-link' do %>
      <i class="fa-solid fa-tower-cell"></i>　バナー一覧
    <% end %>
  </div>  
  <div class="mt-2 mb-2 h5">
    <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link sidebar-link' do %>
      <i class="fas fa-sign-out-alt"></i>　ログアウト
    <% end %>
  </div>
<% end %>

  <div style="margin:10px 0 0 10px;">
    <button class="scroll-to-top-button" onclick="scrollToTop()" style="padding: 10px; border-radius: 25px; color: #D43EFF; background-color: white; border: 1px white solid; width: 90%; font-weight: bold; display:none;">
      <i class="fa-solid fa-chevron-up"></i> トップへ
    </button>
  </div>
  
  <div style="margin:20px 0 0 0;"><%= link_to "サービス概要", about_path , class: 'nav-link sidebar-link'%></div>
  <div style="color: white; margin: 10px 0 0 10px;">©2024 Shunya Yamada. All rights reserved</div>
    
  
</div>

<script>
  // JavaScript code here
  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: 'smooth' }); // Smooth scroll to top
  }

  window.onscroll = function() {
    scrollFunction();
  };

  function scrollFunction() {
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
      document.querySelector('.scroll-to-top-button').style.display = 'block';
    } else {
      document.querySelector('.scroll-to-top-button').style.display = 'none';
    }
  }
</script>