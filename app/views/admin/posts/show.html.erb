<div class='row'>
  
  <div class='col-2' style="position: sticky; top: 0; left: 0; hheight: 100vh; background-color: #D43EFF;">
    <%= render 'layouts/sidebar' %>
  </div>

  <div class='col-7'>
    <div class='card-list-container py-5'>
      <div class='card mt-4 shadow-lg'>
      <% if @post.image.attached? %>
        <%= image_tag @post.get_image, class: 'card-img-top';%>
        <%#= image_tag @post.image %>
      <% end %>
        <div class='card-body'>
          <div class='row'>
            <div class='col-2'>
              <%= link_to user_path(@post.user_id) do %><%= image_tag @post.user.get_profile_image(50,50), class: "rounded-circle"; %><% end %>
            </div>
            <div class='col-10'>
              <p class='card-title'>
              <%= @post.user.name %>
              </p>
              <strong><i class="fa-solid fa-shop"></i>　<span><%= link_to post_path(@post.id) do %><%= @post.shop %></span></strong><% end %>
              <span><p class='card-text'></p><%= @post.caption %></p></span>
              <% if @post.category.present? %>
                <span><%=link_to@post.category,tagsearches_search_path(content:@post.category)%>
              <% end %>
              <span id="favorite_btn_<%= @post.id %>"><%= render 'admin/favorites/btn', post: @post %></span>
              <span><%= render 'admin/post_comments/counter', post: @post %></span>
              <span>観覧数：<%= @post_detail.view_counts.count %></span>
              <div>
                <span><%= link_to "削除", admin_post_path(@post), method: :delete %></span>
              </div>
            </div>
          </div>
                <div id="comment_index"><%= render 'admin/post_comments/index', post: @post %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-3" style="position: sticky; top: 0; left: 0; height: 100vh;">
    <%= render "layouts/sidebar_r" %>
  </div>

</div>