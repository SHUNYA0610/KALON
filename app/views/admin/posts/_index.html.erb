<div class="card-list-container py-2">
  <% posts.each do |post| %>
    <%= link_to admin_post_path(post.id), class: "card-link" do %>
    <div class="card mt-4 shadow-lg">
      <% if post.image.attached? %>
        <%= image_tag post.get_image, class: 'card-img-top';%>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2 text-right" style="margin-right: -10px;">
            <%= link_to user_path(post.user_id) do %><%= image_tag post.user.get_profile_image(50,50), class: "rounded-circle"; %><% end %>
          </div>
          <div class='col-10'>
            <p class='card-title'>
              <%= post.user.name %>
            </p>
            <strong><%= link_to admin_post_path(post.id) do %><i class="fa-solid fa-shop"></i>　<span><%= post.shop %></span></strong><% end %>
            <span><p class='card-text'></p><%= post.caption %></p></span>
            <% if post.category.present? %>
              <span><%=link_to post.category,admin_tagsearches_path(content: post.category)%></span>
            <% end %>
            <span id="favorite_btn_<%= post.id %>"><%= render "admin/favorites/btn", post: post %></span>
            <span><%= render "user/post_comments/counter", post: post %></span>
　　　　　　<p class="card-text">作成日時: <%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
          </div>
        </div>
      </div>
    </div>
   <% end %>
  <% end %>
</div>