<div class="row">

    <%= render 'layouts/sidebar' %>

  <div style="flex:4;">
    <h2>バナー</h2>
      <table class="table">
        <thead>
          <tr>
            <th>画像</th>
            <th>URL</th>
            <th>表示・非表示</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @banners.each do |banner| %>
            <tr>
              <td class="align-middle"><%= image_tag banner.get_banner_image, style: "width: 50px; height: 50px" %> </td>
              <td class="align-middle"><%= banner.url %></td>
              <td class="align-middle"><%= banner.visible ? '表示' : '非表示' %></td>
              <td class="align-middle"><%= link_to '編集', edit_admin_banner_path(banner), class: "btn btn-sm btn btn-outline-success" %></td>
              <td class="align-middle"><%= link_to '削除', admin_banner_path(banner), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-outline-danger"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  
    <%= render "layouts/sidebar_r" %>

</div>