<div class="row">
  
  <%= render "user/posts/post_modal", post: @new_post %>
  <%= render "layouts/sidebar" %>

  <div style="flex:4;">
    <h2>タグ検索結果</h2>
    <% if @posts.exists? %>
    <%= render 'user/posts/index', posts: @posts %>
    <% else %>
      <p>タグが存在しません</p>
    <% end %>
  </div>

  <%= render "layouts/sidebar_r" %>
</div>