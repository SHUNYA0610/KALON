<div class='row'>

  <%= render "user/posts/post_modal", post: @post %>
    <%= render 'layouts/sidebar' %>

  <div style="flex:4;">
    <div>
      <h2>グループ詳細</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>メンバー</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% if @group.group_image.attached? %>
          <td class="align-middle"><%= image_tag @group.group_image.variant(resize_to_fill: [50, 50]).processed,class: "rounded-circle" %></td>
          <% else %>
          <td class="align-middle"><%= image_tag "no-image.jpg", size: "50x50",class: "rounded-circle" %></td>
          <% end %>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <% @group.users.each do |user| %>
　　        <td style="list-style: none;"><%= user.name %></td>
          <% end %>
          <td>
            <% if @group.owner_id == current_user.id %>
            　　<%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %>
            　　<%= link_to 'Mail',group_new_mail_path(@group), class: "fas fa-paper-plane" %>
            <% elsif @group.includesUser?(current_user)%>
            　　<%= link_to 'Leave this group', group_group_users_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
            <% else %>
            　　<%= link_to 'Join this group', group_group_users_path(@group), method: :post, class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
  
    <%= render "layouts/sidebar_r" %>

</div>