<div class='container'>
  <div class='row'>
    
    <div class='col-3'>
      <%= render 'layouts/sidebar' %>
    </div>
    
    <div class='col-7'>
      <div>
        <h2>グループ一覧</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>紹介文</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <% if group.image.attached? %>
                <td><%= image_tag group.image.variant(resize: "50x50").processed, class: "img-fluid" %></td>
                <% else %>
                <td><%= image_tag "no-image.jpg",resize: "50x50",class: "img-fluid" %></td>
                <% end %>
                <td><%= link_to group.name, group_path(group) %></td>
                <td><%= group.introduction %></td>
                <td>
                  <% if group.owner_id == current_user.id %>
                    <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <div class='col-2'>
    </div>
    
  </div>  
</div>