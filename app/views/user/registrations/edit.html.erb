<div class="row" style="margin-top: 150px" >

  <div style="width: 50%; display: flex; justify-content: center; align-items: center;">
    <%= image_tag "logo.png", size: "500x500" %>
  </div>
  
  <div style="width: 50%; display: flex; justify-content: center; ">
    <div style="width: 70%; margin-top: 43px;">
    <h2>パスワードの変更</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "user/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", style: "padding: 8px;border-radius: 12px; margin-bottom: 15px; width: 100%;" %>
        </div>
        
        <div class="field">
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワード", style: "padding: 8px;border-radius: 12px; margin-bottom: 15px; width: 100%;" %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="field">
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> 文字以上</em>
          <% end %>
          <%= f.password_field :password, placeholder: "新しいパスワード", style: "padding: 8px;border-radius: 12px; margin-bottom: 15px; width: 100%;" %>
        </div>
      
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード（確認）", style: "padding: 8px;border-radius: 12px; margin-bottom: 15px; width: 100%;" %>
        </div>
      
        <div class="actions">
          <%= f.submit "パスワードの更新" , style: "color: white; padding: 8px;border-radius: 12px; margin-bottom: 10px; width: 100%; border: 3px white solid;; background-color: #D43EFF; margin-top: 15px;"%>
        </div>
      <% end %>
      
      <div><%= link_to "アカウントの削除", registration_path(resource_name), data: { confirm:  "本当に削除して宜しいですか?削除するとアカウントの復旧はできません。", turbo_confirm:  "本当に削除して宜しいですか?削除するとアカウントの復旧はできません。" }, method: :delete %></div>
      
      <div><%= link_to "編集画面に戻る", :back %></div>
    </div>

</div>

<footer>
  <div style="text-align:center;">©2024 Shunya Yamada. All rights reserved</div>
</footer>