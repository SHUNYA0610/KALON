<% posts.each do |post| %>
  <div class="card-list-container py-5">
    <div class="card mt-4 shadow-lg">
    <%= image_tag post.get_image, class: "card-img-top";%>
      <div class="card-body">
        <div class="row">
          <div class="col-2"> 
            <%= link_to user_path(post.user_id) do %><%= image_tag post.user.get_profile_image(50,50), class: "rounded-circle"; %><% end %>
          </div>
          <div class="col-10">
            <p class="card-title">
                  <%= post.user.name %>
                </p>
                <strong><i class="far fa-flag"></i><span><%= link_to post_path(post.id) do %><%= post.shop %></span></strong><% end %>
                <span><p class="card-text"></p><%= post.caption %></p></span>
                <span id="favorite_btn_<%= post.id %>"><%= render "user/favorites/btn", post: post %></span>
                <span>コメント数： <%= post.post_comments.count %></span>
              </div>
          </div>
      </div>  
  </div>
<% end %>