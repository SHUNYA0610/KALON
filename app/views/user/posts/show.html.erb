<div class='container'>
  <div class='row'>
    
    <div class='col-3'>
      <%= render 'layouts/sidebar' %>
    </div>
    
    <div class='col-7'>
      <%= render 'user/posts/new', post: @post %>

      <div class='card-list-container py-5'>
        <div class='card mt-4 shadow-lg'>
        <%= image_tag @post.get_image, class: 'card-img-top';%>
          <div class='card-body'>
            <div class='row'>
              <div class='col-2'> 
                <%= link_to user_path(@post.user_id) do %><%= image_tag @post.user.get_profile_image(50,50), class: "rounded-circle"; %><% end %>
              </div>
              <div class='col-10'>
                <p class='card-title'>
                      <%= @post.user.name %>
                    </p>
                    <strong><i class='far fa-flag'></i><span><%= link_to post_path(@post.id) do %><%= @post.shop %></span></strong><% end %>
                    <span><p class='card-text'></p><%= @post.caption %></p></span>
                    <% if @post.category.present? %>
                      <span><%=link_to@post.category,tagsearches_search_path(content:@post.category)%>
                    <% end %>
                    <span id="favorite_btn_<%= @post.id %>"><%= render 'user/favorites/btn', post: @post %></span>
                    <span><%= render 'user/post_comments/counter', post: @post %></span>
                    <span>観覧数:<%= @post_detail.view_counts.count %></span>
                    <div>
                    <% if @user == current_user %>
                      <span><%= link_to "編集", edit_post_path(@post)%></span>
                      <span><%= link_to "削除", post_path(@post), method: :delete %></span>
                    <% end %>
                    </div>
              </div>
            </div>
                  <div id="comment_index"><%= render 'user/post_comments/index', post: @post %></div>
                  <%= render 'user/post_comments/form', post: @post, post_comment: @post_comment %>    
          </div>
        </div>  
      </div>
    </div>
    
    <div class='col-2'>
    </div>
    
  </div>  
</div>