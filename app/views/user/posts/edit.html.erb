<div class="row">

  <%= render "user/posts/post_modal", post: @new_post  %>
    <%= render 'layouts/sidebar' %>

  <div class="" style="flex: 4;">
    <%= render 'layouts/error', obj: @post %> 
    <h1>ポストの編集</h1>
    <%= form_with model: @post, mothod: :patch do |f| %>
      <div>
        <%= f.label :イメージ %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div>
        <%= f.label :shop %>
        <%= f.text_field :shop %>
      </div>
      <div>
        <%= f.label :opinion %>
        <%= f.text_area :caption %>
      </div>
      <div>
        <%= f.label :カテゴリータグ %>
        <%= f.text_field :category %>
      </div>
      <div>
        <%= f.submit "ポスト更新" %>
      </div>
    <% end %>
  
    <%= link_to "詳細", post_path(@post) %>
    |
    <%= link_to "戻る", posts_path %>
  </div>
  
    <%= render "layouts/sidebar_r" %>

</div>