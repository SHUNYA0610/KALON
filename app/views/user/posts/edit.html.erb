<div>
  <div>
    <div>
      <h1>Editing Post</h1>
      <%= form_with model: @post, mothod: :patch do |f| %>
        <div>
          <%= f.label :shop %>
          <%= f.text_field :shop %>
        </div>
        <div>
          <%= f.label :opinion %>
          <%= f.text_area :caption %>
        </div>
        <div>
          <%= f.submit "Update Book" %>
        </div>
      <% end %>

      <%= link_to "Show", post_path(@post) %>
      |
      <%= link_to "Back", posts_path %>
    </div>
  </div>
</div>