<div class="container">
  <div class="row">

    <%= render "user/posts/post_modal", post: @new_post %>
    <div class="col-2" style="position: sticky; top: 0; left: 0; height: 100vh; background-color: #D43EFF;">
      <%= render "layouts/sidebar" %>
    </div>
    
    <div class="col-7">
      <div>  
        <% @entries.each do |e| %>
        <% if @myUserId != e.user.id %>
            <h2><%= e.user.name %>さんとのトークルーム</h2>
        <% end %>
        <% end %>
        <%= link_to "ユーザー一覧に戻る", users_path %>
        
           <% if @messages.present? %>
             <% @messages.each do |m| %>
               <% @myUserId == m.user.id %>
               <p><%= m.user.name %></p>
                 <p><%= m.message %></p>
             <% end %>
           <% end %>
           
        <%= form_for @message do |f| %>
           <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 50, class:"form-text-field" %>
              <%= f.hidden_field :room_id, value: @room.id %>
                <%= f.submit "投稿",class: 'form-submit'%>
        <% end %>
      </div>
    </div>

    <div class="col-3" style="position: sticky; top: 0; left: 0; height: 100vh;">
      <%= render "layouts/sidebar_r" %>
    </div>

  </div>
</div>