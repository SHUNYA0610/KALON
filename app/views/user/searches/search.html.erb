<div class="row">

  <%= render "user/posts/post_modal", post: @new_post %>
  <%= render "layouts/sidebar" %>

  <div style="flex:4;">
    <% if @model == 'user' %>
      <h3>ユーザーの"<%= @content %>"検索結果</h3>
      <% if @records.exists? %>
          <%= render 'user/users/index', users: @records %>
      <% else %>
      　　<p>一致するユーザーが存在しません</p>
    　<% end %>
    <% elsif @model == 'post' %>
      <h3>ポストの"<%= @content %>"検索結果</h3>
      <% if @records.exists? %>
   　　　　 <%= render 'user/posts/index', posts: @records %>
      <% else %>
      　　<p>一致するポストが存在しません</p>
    　<% end %>
    <% end %>
  </div>
  
  <%= render "layouts/sidebar_r" %>
</div>