<div class="container">
  <div class="row">

    <div class="col-3" style="position: sticky; top: 0; left: 0; height: 100vh; background-color: #D43EFF;">
      <%= render "layouts/sidebar" %>
    </div>

    <div class="col-7">
      <% if @model == 'user' %>
        <h3>Users search for "<%= @content %>"</h3>
      <%= render 'user/users/index', users: @records %>
      <% elsif @model == 'post' %>
        <h3>Posts search for "<%= @content %>"</h3>
      <%= render 'user/posts/index', posts: @records %>
    <% end %>
    </div>

    <div class="col-2" style="position: sticky; top: 0; left: 0; height: 100vh;">
      <%= render "layouts/sidebar_r" %>
    </div>
    
  </div>  
</div>