<div class="row">

  <%= render "user/posts/post_modal", post: @new_post %>
    <%= render "layouts/sidebar" %>

  <div class="col-7">
    <% if @model == 'user' %>
      <h3>Users search for "<%= @content %>"</h3>
    <%= render 'user/users/index', users: @records %>
    <% elsif @model == 'post' %>
      <h3>Posts search for "<%= @content %>"</h3>
    <%= render 'user/posts/index', posts: @records %>
  <% end %>
  </div>

    <%= render "layouts/sidebar_r" %>

</div>