<div class="container">
  <div class="row">

    <%= render "user/posts/post_modal" %>    
    <div class="col-3" style="position: sticky; top: 0; left: 0; height: 100vh; background-color: #D43EFF">
      <%= render 'layouts/sidebar' %>
    </div>
    
    <div class="col-7">
      <%= render 'user/posts/new', post: @post %>
          <!--ユーザー一覧表示-->
      <div>
        <h2>ユーザー一覧</h2>
        <div><%=link_to "グループを作成する",new_group_path %> | <%=link_to "グループ一覧",groups_path %></div>
        <%= render 'user/users/index', users: @users %>
      </div>
    </div>
    
    <div class="col-2" style="position: sticky; top: 0; left: 0; height: 100vh;">
      <%= render "layouts/sidebar_r" %>
    </div>
    
  </div>
</div>
