<div class="row">

  <%= render "user/posts/post_modal", post: @post %>    
    <%= render 'layouts/sidebar' %>

  <div style="flex:4;">
    <div class="tabs">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#section1">ユーザー一覧</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#section2">チャット一覧</a>
        </li>
      </ul>
      <div class="tab-content">
        <div id="section1" class="tab-pane fade show active">
          <%= render 'user/users/index', users: @users %>
        </div>
        <div id="section2" class="tab-pane fade" style="margin-top: -26px;" >
          <table class="table table-hover table-invers">
            <thead>
              <tr>
                <th>プロフ画像</th>
                <th>アカウント名</th>
                <th colspan="1"></th>
              </tr>
            </thead>
            <tbody>
              <% @rooms.each do |r| %>
                <% r.users.each do |u| %>
                 <% if u.id == current_user.id %>
                 <% else %>
                   <tr>
                 　　<td class="align-middle"><%= image_tag u.get_profile_image(50,50), class: "rounded-circle"; %></td>
                    <td class="align-middle"><%= u.name %>さん</td>
                    <td class="align-middle"><a href="/rooms/<%= r.id %>">チャットルームへ</a></td>
                   </tr>
                 <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

    <%= render "layouts/sidebar_r" %>

</div>