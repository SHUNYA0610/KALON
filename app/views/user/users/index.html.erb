<div>
  <div>
    <div>
      <!--ユーザー情報-->
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div>
        <%= link_to edit_user_path(@user) do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <!--投稿機能-->
<h2>New Posts</h2>
<%= form_with model: @post do |f| %>
  <div>
  <%= f.label :img %>
  <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :shop %>
    <%= f.text_field :shop %>
  </div>
  <div>
    <%= f.label :opinion %>
    <%= f.text_area :caption %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>


    <!--ユーザーの一覧表示-->
    <div>
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
