<div>
  <div>
    <%= image_tag user.get_profile_image(100,100), class: "rounded-circle"; %>
  </div>
  <div>
    <% if current_user != user %>
      <%= render 'user/relationships/btn', user: user, options: { class: ""} %></span>
    <% else %>
      <%= link_to edit_user_path(user) do %>
        <button type="button" class="btn btn-outline-secondary">プロフィールを編集する</button>
      <% end %>
    <% end %>

    <% unless user.id == current_user.id %>
      <% if (current_user.following? user) && (user.following? current_user)  %>
      <% if isRoom == true %>
        <p><a href="/rooms/<%= roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
      <% else %>
        <%= form_for room do |f| %>
          <%= fields_for entry do |e| %>
            <%= e.hidden_field :user_id, value: user.id %>
          <% end %>
          <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
        <% end %>
      <% end %>
      <% end %>
    <% end %>
  </div>
<div>  
<div class="flex-column">
  <div>
    <div>
      <%= @user.name %>
    </div>
    <div>
      <%= @user.introduction %>
    </div>
  </div>
  <div> 
    <span><%= link_to @user.followings.count, user_followings_path(@user) %>フォロー中</span>
    <span><%= link_to @user.followers.count, user_followers_path(@user) %>フォロワー</span>
  </div>
</div>