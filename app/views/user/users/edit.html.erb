<div class="container">
  <div class="row">
    
    <div class="col-3">
      <%= render "layouts/sidebar" %>
    </div>
    
    <div class="col-7">
      <div>
        <div>
          <div>
            <h2>プロフィール編集</h2>
            <%= form_with model: @user do |f| %>
              <div>
                <%= f.label :ニックネーム %>
                <%= f.text_field :name, autofocus: true, id:"inputName" %>
              </div>
              <div>
                <%= f.label :プロフィール画像 %>
                <%= f.file_field :profile_image, accept: "image/*" %>
              </div>
              <div>
                <%= f.label :自己紹介 %>
                <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
              </div>
              <div>
                <%= f.submit "プロフィール更新" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-2">
    </div>
    
  </div>  
</div>