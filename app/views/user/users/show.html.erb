<投稿機能>
<div id="postForm" style="display: none;">
<h2>New Posts</h2>
<%= form_with model: @post do |f| %>
  <div>
  <%= f.label :img %>
  <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :shop %>
    <%= f.text_field :shop %>
  </div>
  <div>
    <%= f.label :opinion %>
    <%= f.text_area :caption %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</div>


    <!--ユーザーが投稿した本の一覧機能-->
<div class="card w-50 mx-auto mt-4 shadow-lg">
  <div class="row">
    <div class="col-3"> 
      <%= image_tag @user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
    </div>
    <div class="col-9">
      <%= link_to edit_user_path(@user) do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>
    <span><%= @user.name %></span>
    <span><%= @user.introduction %></span>

  <% @posts.each do |post| %>
  <%= image_tag post.get_image, class: "card-img-top";%>
    <div class="card-body">
      <div class="row">
        <div class="col-1"> 
          <%= link_to user_path(post.user_id) do %><%= image_tag post.user.get_profile_image(50,50), class: "rounded-circle"; %><% end %>
        </div>
            <div class="col-11">
              <p class="card-title">
                <%= post.user.name %>
              </p>
              <strong><i class="far fa-flag"></i><span><%= link_to post_path(post.id) do %><%= post.shop %></span></strong><% end %>
              <span><p class="card-text"></p><%= post.caption %></p></span>
            </div>
        </div>
    </div>  
  <% end %>
</div>
