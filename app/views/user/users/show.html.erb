
<div class='container'>
  <div class='row'>

    <div class='col-3' style="position: sticky; top: 0; left: 0; height: 100vh; background-color: #D43EFF;">
      <%= render 'layouts/sidebar' %>

      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">ポストする</button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h2>新しくポスト</h2>
              <%= form_with model: @post do |f| %>
                <div>
                  <%= f.label :イメージ %>
                  <%= f.file_field :image, accept: "image/*" %>
                </div>
                <div>
                  <%= f.label :利用サロン %>
                  <%= f.text_field :shop %>
                </div>
                <div>
                  <%= f.label :説明 %>
                  <%= f.text_area :caption %>
                </div>
                <div>
                <%= f.label :カテゴリータグ %>
                <%= f.text_field :category %>
                </div>
                <div>
                  <%= f.submit "ポストする"%>
                </div>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class='col-7'>
      <%= render 'user/users/info', user: @user, isRoom: @isRoom, roomId: @roomId, room: @room, entry: @entry %>
      <%= render 'user/posts/index', posts: @posts %>
    </div>

    <div class='col-2'>
    </div>

  </div>
</div>
